pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract Ethrex is ERC20 {
    constructor(uint256 initialSupply) ERC20("Ethrex", "ETHRX") {
        _mint(msg.sender, initialSupply * 10 ** decimals());
    }
}

npm install --global hardhat

npm install @openzeppelin/contracts

mkdir ethrex-token && cd ethrex-token
npx hardhat init

require("@nomicfoundation/hardhat-toolbox");
module.exports = {
  solidity: "0.8.20",
  networks: {
    sepolia: {
      url: "https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID",
      accounts: ["YOUR_PRIVATE_KEY"]
    }
  }
};

npx hardhat compile

const hre = require("hardhat");

async function main() {
  const initialSupply = 1000000; // 1 million Ethrex tokens
  const Ethrex = await hre.ethers.getContractFactory("Ethrex");
  const ethrex = await Ethrex.deploy(initialSupply);
  await ethrex.deployed();
  console.log("Ethrex deployed to:", ethrex.address);
}

main().catch((error) => {
  console.error(error);
  process.exitCode = 1;
});





